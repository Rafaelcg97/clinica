                            Content="IMC:"
                            Width="100"/>
                        <TextBlock
                            x:Name="lblimc"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Text="----"
                            TextWrapping="Wrap"
                            Width="200"
                            Height="50"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Page>
