                    x:Name="btnBuscarPaciente"
                    Width="80"
                    Height="25" 
                    Click="btnBuscarPaciente_Click">
                    <Image Source="/imagenes/lupa.png"/>
                </Button>
                <Button
                    x:Name="btnDescargar"
                    Width="80"
                    Height="25" Click="btnDescargar_Click" >
                    <Image Source="/imagenes/archivo.png"/>
                </Button>
                <Button
                    x:Name="btnPDF"
                    Width="80"
                    Height="25" Click="btnPDF_Click">
                    <Image Source="/imagenes/pdf.png"/>
                </Button>
            </StackPanel>
        </Viewbox>
        <ListView
            x:Name="lstPacientes"
            Grid.ColumnSpan="16"
            Grid.RowSpan="16"
            Grid.Row="4"
            Margin="10">
            <ListView.View>
                <GridView>
                    <GridViewColumn
                        Header="Selec"
                        Width="35">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Seleccionado}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Fecha Consulta"
                        Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Fecha}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Nombre paciente"
                        Width="220">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Nombre}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Edad"
                        Width="50">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label Content="{Binding Edad}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="DUI"
                        Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Dui}" TextWrapping="Wrap" Width="150"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Motivo Consulta"
                        Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Motivo}" TextWrapping="Wrap" Width="150"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Diagnostico"
                        Width="180">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Diagnostico}" TextWrapping="Wrap" Width="150"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Plan terapeutico"
                        Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Plan}" TextWrapping="Wrap" Width="150"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Historia clinica"
                        Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Examenes}" TextWrapping="Wrap" Width="150"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Antecedentes"
                        Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                    x:Name="btnAntedentes"
                                    Width="50" 
                                    GotFocus="Button_GotFocus"
                                    Click="btnAntedentes_Click"
                                    FontSize="10">
                                    Ver
                                </Button>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn
                        Header="Fisicos"
                        Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button 
                                    x:Name="btnFisicos"
                                    Width="50" 
