                            FontSize="15"
                            FontWeight="Bold"
                            Padding="0"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Left"
                            TextDecorations="Underline"
                            Foreground="#FF2D5216">
                            ANTECEDENTES:
                            </TextBlock>
                            <StackPanel
                            Orientation="Horizontal"
                            Margin="0,10,0,0">
                                <TextBlock
                                FontSize="13"
                                FontWeight="Bold"
                                Padding="0"
                                HorizontalAlignment="Center"
                                TextDecorations="Underline">
