                            Content="AB:"
                            Width="100"/>
                        <TextBlock
                            x:Name="lblab"
                            FontSize="15"
                            FontWeight="SemiBold"
                            Text="----"
                            TextWrapping="Wrap"
                            Width="200"
                            Height="50"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Margin="0,0,5,0"
                            FontSize="15"
