                            TextWrapping="Wrap"
                            Width="200"
                            Height="50"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label
                            Margin="0,0,5,0"
                            FontSize="15"
                            FontWeight="Bold"
                            Content="PV:"
                            Width="100"/>
                        <TextBlock
                            x:Name="lblpv"
                            FontSize="15"
                            FontWeight="SemiBold"
